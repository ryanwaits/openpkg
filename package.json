{
  "name": "openpkg",
  "version": "1.0.0",
  "description": "OpenAPI-like specification generator for TypeScript packages",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "bin": {
    "openpkg": "./dist/cli.js"
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "cli": "bun run src/cli.ts",
    "generate:examples": "cd examples && ./generate-all.sh",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "commander": "^14.0.0",
    "typescript": "^5.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "bunup": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}