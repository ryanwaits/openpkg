{
  "name": "openpkg",
  "version": "1.0.0",
  "description": "OpenAPI-like specification generator for TypeScript packages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openpkg": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/cli.ts",
    "start": "node dist/cli.js",
    "generate:examples": "cd examples && ./generate-all.sh",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "commander": "^14.0.0",
    "typescript": "^5.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}