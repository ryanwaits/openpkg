{
  "name": "openpkg-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:sdk && bun run build:cli",
    "build:sdk": "cd packages/sdk && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "dev": "bun run --parallel dev:sdk dev:cli",
    "dev:sdk": "cd packages/sdk && bun run dev",
    "dev:cli": "cd packages/cli && bun run dev",
    "lint": "biome check packages/*/src/ examples/",
    "lint:fix": "biome check --write packages/*/src/ examples/",
    "format": "biome format --write packages/*/src/ examples/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  }
}
